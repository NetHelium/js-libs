{
  "name": "@net-helium/ui",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "description": "Collection de composants pour la construction d'interfaces utilisateur",
  "homepage": "https://github.com/NetHelium/js-libs/tree/main/packages/ui",
  "author": {
    "name": "Net Hélium",
    "url": "https://net-helium.fr"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NetHelium/js-libs.git",
    "directory": "packages/ui"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepack": "clean-package",
    "postpack": "clean-package restore",
    "check:types": "tsc --emitDeclarationOnly false --noEmit",
    "clean": "rm -rf dist",
    "dev:source": "./script/build.ts --watch",
    "dev:types": "tsc-watch -p ./tsconfig.build.json",
    "dev": "pnpm clean && concurrently -n \"source,types\" \"pnpm dev:source\" \"pnpm dev:types\"",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "build:source": "./script/build.ts",
    "build:types": "tsc -p ./tsconfig.build.json",
    "build": "pnpm clean && pnpm build:source && pnpm build:types"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./components/*": {
      "types": "./dist/components/*/index.d.ts",
      "default": "./dist/components/*/index.js"
    },
    "./*": {
      "types": "./dist/*/index.d.ts",
      "default": "./dist/*/index.js"
    }
  },
  "files": ["dist"],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@net-helium/lib": "workspace:",
    "lit": "catalog:"
  },
  "devDependencies": {
    "@commander-js/extra-typings": "catalog:",
    "@open-wc/testing": "catalog:",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/ui": "catalog:",
    "clean-package": "catalog:",
    "commander": "catalog:",
    "concurrently": "catalog:",
    "esbuild": "catalog:",
    "globby": "^14.0.2",
    "jsdom": "catalog:",
    "tsc-watch": "catalog:",
    "tslib": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "keywords": ["net hélium", "ui", "interfaces utilisateur", "composants"],
  "license": "MIT",
  "packageManager": "pnpm@9.12.1",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.5.0"
  }
}
