{
  "name": "@net-helium/tools",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "cli": "./scripts/build-cli.ts",
    "tscheck": "./bin/nhcli tscheck",
    "dev": "./bin/nhcli build -w",
    "build": "pnpm cli && ./bin/nhcli build"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*/index.d.ts",
      "default": "./dist/*/index.js"
    },
    "./e2e/*": {
      "types": "./dist/e2e/*/index.d.ts",
      "default": "./dist/e2e/*/index.js"
    },
    "./test/dom": {
      "types": "./dist/test/dom.d.ts",
      "default": "./dist/test/dom.js"
    }
  },
  "bin": {
    "nhcli": "./bin/nhcli"
  },
  "dependencies": {
    "@open-wc/testing": "^4.0.0",
    "@playwright/test": "^1.51.1",
    "@testing-library/dom": "^10.4.0",
    "@vitest/coverage-v8": "^3.0.9",
    "@vitest/ui": "^3.0.9",
    "arg": "^5.0.2",
    "chalk": "^5.4.1",
    "clean-package": "^2.2.0",
    "concurrently": "catalog:",
    "esbuild": "^0.25.1",
    "esbuild-plugin-minify-html-literals": "^2.0.1",
    "globby": "^14.1.0",
    "jsdom": "^26.0.0",
    "lodash-es": "catalog:",
    "tsc-watch": "^6.2.1",
    "vitest": "^3.0.9"
  },
  "devDependencies": {
    "@types/lodash-es": "catalog:",
    "tsx": "catalog:"
  },
  "license": "MIT"
}
